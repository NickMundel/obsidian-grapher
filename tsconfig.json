{
    "compilerOptions": {
      "baseUrl": ".",
      "inlineSourceMap": true,
      "inlineSources": true,
      "module": "ESNext",
      "target": "ES2021",
      "allowJs": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "importHelpers": true,
      "noEmit": true,
      "isolatedModules": true,
      "verbatimModuleSyntax": true,
      "lib": [
        "DOM",
        "ES5",
        "ES6",
        "ES7",
        "ES2021"
      ]
    },
    "include": [
      "**/*", "**/*.svelte"
    ],
}